<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="FFF_Hypermesh_Suit"]/statBases</xpath>
					<value>
						<Bulk>1.71</Bulk>
						<WornBulk>1.71</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="FFF_SealedProtosuit"]/statBases</xpath>
					<value>
						<Bulk>2.3</Bulk>
						<WornBulk>2.3</WornBulk>
					</value>
				</li>

                <li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="FFF_RegalSuit" or defName="FFF_CrewSuit"]/statBases</xpath>
					<value>
						<Bulk>3</Bulk>
						<WornBulk>2</WornBulk>
					</value>
				</li>

                <li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="FFF_PilotSuit"]/statBases</xpath>
					<value>
						<Bulk>5</Bulk>
						<WornBulk>3</WornBulk>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[
                        defName="FFF_Hypermesh_Suit" or
						defName="FFF_SealedProtosuit" or
                        defName="FFF_RegalSuit" or
						defName="FFF_CrewSuit"
                        ]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>8</ArmorRating_Sharp>
					</value>
				</li>

                <li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FFF_PilotSuit"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>10</ArmorRating_Sharp>
					</value>
				</li>

                <li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FFF_PilotSuit"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>10</ArmorRating_Blunt>
					</value>
				</li>

                <li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="FFF_RegalFlak"]/statBases</xpath>
					<value>
						<Bulk>9</Bulk>
						<WornBulk>6</WornBulk>
					</value>
				</li>

                <li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FFF_RegalFlak"]/statBases/ArmorRating_Sharp</xpath>
					<value>
						<ArmorRating_Sharp>15</ArmorRating_Sharp>
					</value>
				</li>

				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="FFF_RegalFlak"]/statBases/ArmorRating_Blunt</xpath>
					<value>
						<ArmorRating_Blunt>25</ArmorRating_Blunt>
					</value>
				</li>

                <li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="FFF_Apparel_MobilityBelt"]/statBases</xpath>
					<value>
						<Bulk>4</Bulk>
						<WornBulk>3</WornBulk>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>